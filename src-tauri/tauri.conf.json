{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Emperor",
  "version": "0.1.0",
  "identifier": "com.emperor.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Emperor AI Assistant",
        "width": 440,
        "height": 720,
        "minWidth": 380,
        "minHeight": 500,
        "visible": false,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
